---
import { Picture } from 'astro:assets';
import ProfilePicture from '../assets/profile.png';

const profile = {
    name: 'Nandan Vallamdasu',
    title: 'AI Engineer',
    location: 'Hyderabad, India',
    description: [
        `AI Engineer blending analytical precision with creative automation to build data systems that don't just process information. They perform.`,
        `Obsessed with turning raw data into scalable intelligence through Azure, Databricks, and Python.`,
        `I craft pipelines, predictive models, and automation frameworks that learn fast, operate clean, and think ahead, engineering AI that transforms complexity into clarity.`
    ]
};
---

<div class="flex flex-col gap-5 items-center text-center sm:items-start sm:text-left">

    <div class="flex flex-col sm:flex-row gap-4 sm:items-center">

        <Picture
            src={ProfilePicture}
            formats={['webp']}
            width={96}
            height={96}
            alt={'Profile picture ' + profile.name}
            title={profile.name}
            class="w-36 h-28 rounded-xl object-cover border-2 border-primary mx-auto sm:mx-0"
        />

        <div>

            <h1 class="text-2xl font-extrabold mb-1 inline-block relative text-text-primary">
                {profile.name}
            </h1>

            <p class="text-sm mb-2 text-primary">
                {profile.title}
            </p>

            <p class="flex items-center justify-center sm:justify-start text-sm text-gray-400">
                <svg class="-mt-0.5 inline mr-2"fill=none height=14 stroke=currentColor stroke-linecap=round stroke-linejoin=round stroke-width=2 viewBox="0 0 24 24"width=14 xmlns=http://www.w3.org/2000/svg><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx=12 cy=10 r=3></circle></svg>
                {profile.location}
            </p>

        </div>

    </div>

    <div class="text-xs leading-relaxed mt-4 text-gray-400 space-y-4">
        {profile.description.map((paragraph) => <p>{paragraph}</p>)}
    </div>

</div>